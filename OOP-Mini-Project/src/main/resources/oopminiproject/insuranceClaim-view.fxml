<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oopminiproject.controller.InsuranceClaimController">
    <SplitPane dividerPositions="0.5" layoutY="31.0" prefHeight="600.0" prefWidth="800.0">
        <!-- Left Pane: Claim Submission Form -->
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="600.0" prefWidth="400.0">
            <Accordion fx:id="claimAccordion" prefHeight="600.0" prefWidth="400.0">
                <panes>
                    <TitledPane fx:id="claimPane" animated="false" text="File a Claim">
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="400.0">
                            <Label layoutX="10.0" layoutY="10.0" text="Cattle ID:" />
                            <TextField fx:id="cattleIdField" layoutX="100.0" layoutY="10.0" prefWidth="200.0" />

                            <Label layoutX="10.0" layoutY="50.0" text="Claim Type:" />
                            <TextField fx:id="claimTypeField" layoutX="100.0" layoutY="50.0" prefWidth="200.0" promptText="Loss, Illness, Death" />

                            <Label layoutX="10.0" layoutY="90.0" text="Date of Incident:" />
                            <TextField fx:id="incidentDateField" layoutX="100.0" layoutY="90.0" prefWidth="200.0" />

                            <Label layoutX="10.0" layoutY="130.0" text="Description:" />
                            <TextArea fx:id="descriptionField" layoutX="100.0" layoutY="130.0" prefWidth="250.0" prefHeight="100.0" wrapText="true" />

                            <Button layoutX="250.0" layoutY="250.0" mnemonicParsing="false" onAction="#handleSubmitClaim" text="Submit Claim" />
                        </AnchorPane>
                    </TitledPane>

                    <TitledPane fx:id="trackClaimPane" animated="false" text="Track Claims">
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="400.0">
                            <TableView fx:id="claimTable" layoutX="10.0" layoutY="10.0" prefHeight="350.0" prefWidth="380.0">
                                <columns>
                                    <TableColumn fx:id="claimIdColumn" prefWidth="50.0" text="Claim ID" />
                                    <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
                                    <TableColumn fx:id="typeColumn" prefWidth="100.0" text="Claim Type" />
                                    <TableColumn fx:id="dateColumn" prefWidth="100.0" text="Date Submitted" />
                                </columns>
                            </TableView>
                            <Button layoutX="300.0" layoutY="370.0" mnemonicParsing="false" onAction="#handleRefreshClaims" text="Refresh" />
                        </AnchorPane>
                    </TitledPane>
                </panes>
            </Accordion>
        </AnchorPane>

        <!-- Right Pane: Policy Details -->
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="600.0" prefWidth="400.0">
            <Label layoutX="10.0" layoutY="10.0" text="Policy Details" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <TextArea fx:id="policyDetailsText" layoutX="10.0" layoutY="40.0" prefWidth="380.0" prefHeight="200.0" wrapText="true" editable="false" />

            <Label layoutX="10.0" layoutY="260.0" text="Current User:" />
            <Label fx:id="currentUserLabel" layoutX="90.0" layoutY="260.0" text="Username" />

            <Button layoutX="300.0" layoutY="530.0" mnemonicParsing="false" onAction="#handleBack" text="Back" />
        </AnchorPane>
    </SplitPane>
</AnchorPane>
